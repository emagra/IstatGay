<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.github.emagra.istatgay.IstatActivity">

    <!-- loading progress bar -->
    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <ProgressBar
            android:id="@+id/loadingCircle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="visible"
            android:layout_marginBottom="15dp"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <!-- loading progress bar -->

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.055">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/totalTxtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:padding="4dp"
                android:text="Risposte totali:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/totalTxtViewNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:hint=""
                android:padding="4dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/malePer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:padding="4dp"
                android:text="Percentuale di uomini:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/malePerNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:padding="4dp"
                android:text=""
                android:textSize="16sp" />

            <TextView
                android:id="@+id/femalePer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:padding="4dp"
                android:text="Percentuale di donne"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/femalePerrNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:padding="4dp"
                android:text=""
                android:textSize="16sp" />

            <TextView
                android:id="@+id/gayTxtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:padding="4dp"
                android:text="Percentuale di Omosessuali:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/gayTxtViewNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:hint=""
                android:padding="4dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/gayGenderTxtViewNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:hint=""
                android:padding="4dp"
                android:textSize="16sp" />

            <!-- TODO: move in title bar -->
            <Button
                android:id="@+id/preferenceBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/preference"
                android:textColor="@color/secondaryTextColor"
                android:background="@color/primaryAccentColor"
                android:layout_margin="4dp"
                />

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>

